{
  "name": "@product-factory/task-service",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:docker": "docker-compose up --build",
    "dev:docker:down": "docker-compose down",
    "build": "tsc",
    "build:docker": "docker build -f Dockerfile -t task-service .",
    "start:docker": "docker run -p 3001:3001 task-service"
  },
  "dependencies": {
    "@product-factory/database": "workspace:^",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1"
  }
}
